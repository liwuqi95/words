<p id="notice"><%= notice %></p>

<h1>Test Records</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>User</th>
      <th>Chapter</th>
      <th>Correct</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_records.each do |test_record| %>
      <tr>
        <td><%= test_record.word.word %></td>
        <td><%= test_record.user.email %></td>
        <td><%= test_record.chapter.full_text %></td>
        <td><%= test_record.correct ? '正确':'错误' %></td>
        <td><%= link_to 'Show', test_record %></td>
        <td><%= link_to 'Edit', edit_test_record_path(test_record) %></td>
        <td><%= link_to 'Destroy', test_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'destroy_all', test_records_destory_all_path %>

<%= link_to 'New Test Record', new_test_record_path %>
