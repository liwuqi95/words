<p id="notice"><%= notice %></p>

<h1>Word Meanings</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Meaning</th>
      <th>Character</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_meanings.each do |word_meaning| %>
      <tr>
        <td><%= word_meaning.word_id %></td>
        <td><%= word_meaning.meaning %></td>
        <td><%= word_meaning.character %></td>
        <td><%= link_to 'Show', word_meaning %></td>
        <td><%= link_to 'Edit', edit_word_meaning_path(word_meaning) %></td>
        <td><%= link_to 'Destroy', word_meaning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word Meaning', new_word_meaning_path %>
