<p id="notice"><%= notice %></p>

<h1>Word Libraries</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_libraries.each do |word_library| %>
      <tr>
        <td><%= word_library.word.word %></td>
        <td><%= link_to word_library.library.name,word_library.library %></td>

        <td><%= link_to 'Show', word_library %></td>
        <td><%= link_to 'Edit', edit_word_library_path(word_library) %></td>
        <td><%= link_to 'Destroy', word_library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word Library', new_word_library_path %>
