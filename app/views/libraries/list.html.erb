<p id="notice"><%= notice %></p>

<h1>教材库</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>名称</th>
    <th>年级</th>
    <th>单词数</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @libraries.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= library.grade %></td>
        <td><%= library.words.count %></td>
        <td><%= link_to '查看', library %></td>
        <td><%= link_to '编辑', edit_library_path(library) %></td>
        <td><%= link_to '删除', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

