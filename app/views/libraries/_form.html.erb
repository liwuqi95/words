<%= form_with(model: library, local: true) do |form| %>

    <div class="row">


      <% if library.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(library.errors.count, "error") %> prohibited this library from being saved:</h2>

            <ul>
              <% library.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>



      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="card mb-3">
          <div class="card-header">
            <h3><i class="fa fa-book"></i> 教材信息</h3>

          </div>

          <div class="card-body">
            <div class="form-group">
              <label>教材版本</label>
              <%= form.select :character, Library.versions.keys.to_a, {}, class: 'form-control', style: 'width: 100%;' %>
              <small class="form-text text-muted">请选择教材版本。</small>
            </div>


            <div class="form-group">
              <label>课本名称</label>
              <%= form.text_field :book, class: 'form-control', required: true, placeholder: '课本名称' %>
              <small id="numberlHelp" class="form-text text-muted">请完整输入课本名称。</small>
            </div>
          </div>
        </div><!-- end card-->
      </div>


    </div>


      <div class="row">
        <div class="col-sm-12 col-md-6 text-center">

          <%= button_tag class: 'btn btn-outline-primary btn-lg' do %>
              <i class="fa fa-check"></i> 提交
          <% end %>
        </div>
      </div>



<% end %>
