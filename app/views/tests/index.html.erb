<p id="notice"><%= notice %></p>

<h1>Tests</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Library</th>
      <th>User</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.library.name %></td>
        <td><%= test.user.email %></td>
        <td><%= link_to '启动', launch_test_path(test) %></td>
        <td><%= link_to '详细信息', test %></td>
        <td><%= link_to '编辑', edit_test_path(test) %></td>
        <td><%= link_to '删除', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_test_path %>
