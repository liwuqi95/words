<%= form_with(model: lesson, local: true) do |form| %>


    <div class="row">
      <% if lesson.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

            <ul>
              <% lesson.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="card mb-3">
          <div class="card-header">
            <h3><i class="fa fa-book"></i> 详细信息</h3>

          </div>

          <div class="card-body">

            <div class="form-group">
              <label>用户</label>
              <%=collection_select(:lesson, :user_id, User.all, :id, :email, {prompt: true}, {required: true, class:'form-control select2'})%>
              <small id="numberlHelp" class="form-text text-muted">请选择添加的用户.</small>
            </div>


            <div class="form-group">
              <label>章节</label>

              <%=collection_select(:lesson, :chapter_id, Chapter.all, :id, :full_text , {prompt: true}, {required: true, class:'form-control select2'})%>


              <small class="form-text text-muted">请选择添加的用户.</small>
            </div>



          </div>
        </div><!-- end card-->
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 text-center">

        <%= button_tag class: 'btn btn-outline-primary btn-lg' do %>
            <i class="fa fa-check"></i> 提交
        <% end %>
      </div>
    </div>
<% end %>
