<section class="content-header">
  <h1>
    单词列表
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to home_index_path do %>
          <i class="fa fa-dashboard"></i> 主页
      <% end %>

    </li>
    <li><%= link_to '单词列表', words_path %></li>
    <li class="active">单词列表</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <% if notice %>

      <script>
          swal("操作成功!", "<%=notice %>", "success");
      </script>
  <% end %>



  <div class="row">
    <div class="col-xs-12">

      <div class="box">
        <div class="box-header">
          <h3 class="box-title">详细列表</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">

          <table id="words-list" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th>单词</th>

              <th></th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @words.each do |word| %>
                <tr>
                  <td><%= word.word %></td>

                  <td><%= link_to '查看', word %></td>
                  <td><%= link_to '编辑', edit_word_path(word) %></td>
                  <td><%= link_to '删除', word, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                </tr>
            <% end %>
            </tbody>
            <tfoot>
            <tr>
              <th>单词</th>

              <th></th>
              <th></th>
              <th></th>
            </tr>
            </tfoot>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>



<script>
    $('#sidebar-words, #sidebar-words-list').addClass('active');


</script>

<script>
    $(function () {
        $('#words-list').DataTable({
            'paging'      : true,
            'lengthChange': true,
            'searching'   : true,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : true,
            'language'    : {
                "url" : '//cdn.datatables.net/plug-ins/1.10.16/i18n/Chinese.json'
            }
        })
    });

</script>