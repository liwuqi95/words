<%= form_with(model: word, local: true) do |form| %>
    <div class="row">
      <% if word.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

            <ul>
              <% word.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="card mb-3">
          <div class="card-header">
            <h3><i class="fa fa-font"></i> 单词信息</h3>

          </div>

          <div class="card-body">
            <div class="form-group">
              <label>拼写</label>
              <%= form.text_field :word, class: 'form-control', required: true, placeholder: '请输入单词' %>
              <small class="form-text text-muted">请完整输入单词，如是短句，单词间请用空格分开。</small>
            </div>

            <div class="form-group">
              <label>分层</label>
              <%= form.text_field :separate, class: 'form-control', placeholder: '请给单词分层' %>
              <small id="numberlHelp" class="form-text text-muted">请完整输入单词英音音标</small>
            </div>


            <div class="form-group">
              <label>英音音标</label>
              <%= form.text_field :phonetic, class: 'form-control', placeholder: '请输入音标' %>
              <small id="numberlHelp" class="form-text text-muted">请完整输入单词英音音标</small>
            </div>
          </div>
        </div><!-- end card-->
      </div>

      <% if action_name == 'new' %>
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="card mb-3">
              <div class="card-header">
                <h3><i class="fa fa-book"></i> 词语释义

                  <div class="pull-right">
                    <i class="fa fa-plus"></i>
                  </div>
                </h3>

              </div>

              <div class="card-body">
                <%= form.fields_for :word_meanings do |meanings_form| %>

                    <div class="form-group">
                      <label>词性</label>
                      <%= meanings_form.select :character, WordMeaning.characters.keys.to_a, {}, class: 'form-control select2', style: 'width: 100%;' %>
                      <small class="form-text text-muted">请选择单词词性，如是短句则选无。</small>
                    </div>


                    <div class="form-group">
                      <label>汉译</label>
                      <%= meanings_form.text_field :meaning, class: 'form-control', required: true, placeholder: '请输入单词含义' %>
                      <small id="numberlHelp" class="form-text text-muted">请输入完整汉语含义。</small>
                    </div>

                <% end %>
              </div>
            </div><!-- end card-->
          </div>
          </div>

      <% end %>


      <div class="row">
        <div class="col-sm-12 text-center">

          <%= button_tag class: 'btn btn-outline-primary btn-lg' do %>
              <i class="fa fa-check"></i> 提交
          <% end %>
        </div>
      </div>

<% end %>


