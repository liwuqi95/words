<div class="row">

  <div class="col-xs-12 col-sm-12 col-md-4 offset-md-3" style="margin-top: 10%">
    <h2 class="text-center"><strong>智能</strong>记忆</h2>
    <br>
    <div class="card mb-3">
      <div class="card-body">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',placeholder:'电子邮箱', required: true %>
            </div>


            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control',placeholder:'密码', required: true %>
            </div>


            <div class="form-check">
              <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <label>记住我</label>
              <% end -%>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-info">登录</button>
            </div>
        <% end %>
      </div>
    </div>

    <%= link_to "注册账号", new_registration_path(resource_name) %>

    <div class="pull-right">
      <%= link_to "忘记密码？", new_password_path(resource_name) %>
    </div>

  </div>


</div>

